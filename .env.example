# ======================================
# Enterprise HR Agent - Environment Variables
# ======================================

# === Database ===
DATABASE_URL="mysql+pymysql://user:password@localhost:3306/hr_db"

# === LLM Provider 선택 ===
# "openai" 또는 "ollama" 중 선택
LLM_PROVIDER="openai"

# === OpenAI 설정 (LLM_PROVIDER=openai일 때) ===
OPENAI_API_KEY="sk-your-openai-api-key-here"
LLM_MODEL="gpt-4o-mini"

# === Ollama 설정 (LLM_PROVIDER=ollama일 때) ===
# Ollama 설치: winget install Ollama.Ollama
# 모델 다운로드: ollama pull llama3.1:8b
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.1:8b"
OLLAMA_EMBEDDING_MODEL="nomic-embed-text"

# ======================================
# Task Master AI (Optional)
# ======================================
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
PERPLEXITY_API_KEY="your_perplexity_api_key_here"